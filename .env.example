# AgroBot Raspberry Pi Environment Configuration
# Copy this file to .env and adjust the values for your setup

# Application Settings
APP_NAME="AgroBot Raspberry Pi Controller"
VERSION="1.0.0"
DEBUG=true
HOST=0.0.0.0
PORT=8000

# CORS Settings
ALLOWED_HOSTS=*

# MAVLink/Pixhawk Connection
MAVLINK_CONNECTION_STRING=/dev/ttyUSB0
# Alternative connection strings:
# MAVLINK_CONNECTION_STRING=udp:127.0.0.1:14550  # For SITL simulation
# MAVLINK_CONNECTION_STRING=tcp:127.0.0.1:5760   # For TCP connection
MAVLINK_BAUD_RATE=57600
MAVLINK_TIMEOUT=5.0
AUTO_CONNECT_MAVLINK=true

# GPS Settings
GPS_MIN_SATELLITES=6
GPS_MAX_HDOP=2.0
GPS_COORDINATE_PRECISION=7

# Movement Settings
MAX_SPEED=5.0
MAX_ACCELERATION=2.0
SAFETY_DISTANCE=1.0
HOME_ALTITUDE=10.0

# Radio Control Settings
RC_CHANNELS=8
RC_TIMEOUT=2.0
RC_FAILSAFE_ENABLED=true
RC_MIN_PWM=1000
RC_MAX_PWM=2000
RC_MID_PWM=1500

# Safety Settings
GEOFENCE_ENABLED=true
GEOFENCE_RADIUS=100.0
BATTERY_LOW_THRESHOLD=20.0
AUTO_RTL_ENABLED=true

# Mission Settings
WAYPOINT_RADIUS=2.0
MISSION_TIMEOUT=3600.0
MAX_WAYPOINTS=100

# AgroBot Backend Connection
AGROBOT_BACKEND_URL=http://localhost:5000
AGROBOT_API_KEY=your_api_key_here
BACKEND_TIMEOUT=10.0
BACKEND_RETRY_ATTEMPTS=3
BACKEND_SYNC_INTERVAL=30.0

# Robot Identification
ROBOT_ID=agrobot-rpi-001
ROBOT_NAME="AgroBot Raspberry Pi"

# Telemetry Settings
TELEMETRY_ENABLED=true
TELEMETRY_INTERVAL=1.0
TELEMETRY_BUFFER_SIZE=1000

# WebSocket Settings
WEBSOCKET_MAX_CONNECTIONS=10
WEBSOCKET_PING_INTERVAL=30.0

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=logs/agrobot.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Hardware GPIO Pins
GPIO_LED_STATUS=18
GPIO_LED_ERROR=19
GPIO_BUZZER=20
GPIO_EMERGENCY_STOP=21

# I2C/SPI Settings
I2C_BUS=1
SPI_BUS=0